@page "/mainpage"
@using ProjectIT.Client.Components.Filter
@using ProjectIT.Client.Components.ProjectCard
@using ProjectIT.Client.Components.Search
@using ProjectIT.Client.Components.Tag

<div class="mt-3">
    <div class="row justify-content-center">
        <div class="col-md-3 filter-size">
            <div class="d-flex flex-column justify-content-center px-4">
                <p class="h1 fw-bold">2</p>
                <p class="h6">Projects found</p>
            </div>
            <!-- filtering options -->
            <div class="my-4">
                <FilterPanelTopics OnInitializedData="FilterPanelsInitialized" DataChanged="OnTagClickedInFilterPanel" />
            </div>
            
            <div class="my-4">
                <FilterPanelSimple Title="Semester"
                                Type="FilterType.Semester"
                                OnInitializedData="FilterPanelsInitialized"
                                DataChanged="OnTagClickedInFilterPanel" />
            </div>
            <div class="my-4">
                <FilterPanelSimple Title="ECTS Points"
                                Type="FilterType.ECTS"
                                OnInitializedData="FilterPanelsInitialized"
                                DataChanged="OnTagClickedInFilterPanel" />
            </div>
            <div class="my-4">
                <FilterPanelSimple Title="Languages"
                                Type="FilterType.Language"
                                OnInitializedData="FilterPanelsInitialized"
                                DataChanged="OnTagClickedInFilterPanel" />
            </div>
        </div>
        <div class="col-md-6 main-view-size">
            <div class="mb-4">
                <SearchField PlaceholderText="Search projects..." Height="2.4rem" Width="43rem" />
            </div>
            <div class="mb-4 row">
                <div class="col-md-8">
                    <TagsDisplay @bind-Tags="Tags" />
                </div>
                <div class="col-2 offset-md-2 marg p-0">
                    <div>
                        <button class="btn border px-2 py-0 btn-light dropdown-toggle" type="button" id="sort-btn" data-bs-toggle="dropdown" aria-expanded="false">
                            Sort By
                        </button>
                    </div>
                </div>
            </div>

            <!-- project proposal cards -->
            <div>
                <ProjectCard Title="@title" Description="@description"
                        Date= "@date" Ects="@ects" Supervisor="@supervisor" Educations="@educations" ></ProjectCard>

                <ProjectCard Title="@title" Description="@description"
                        Date= "@date" Ects="@ects" Supervisor="@supervisor" CoSupervisor="@coSupervisor" Educations="@educations" ></ProjectCard>
                
                <ProjectCard Title="@title" Description="@description"
                        Date= "@date" Ects="@ects" Supervisor="@supervisor" Educations="@educations" ></ProjectCard>

                <ProjectCard Title="@title" Description="@description"
                        Date= "@date" Ects="@ects" Supervisor="@supervisor" CoSupervisor="@coSupervisor" Educations="@educations" ></ProjectCard>
               
                <ProjectCard Title="@title" Description="@description"
                        Date= "@date" Ects="@ects" Supervisor="@supervisor" Educations="@educations" ></ProjectCard>

                <ProjectCard Title="@title" Description="@description"
                        Date= "@date" Ects="@ects" Supervisor="@supervisor" CoSupervisor="@coSupervisor" Educations="@educations" ></ProjectCard>
               
                <ProjectCard Title="@title" Description="@description"
                        Date= "@date" Ects="@ects" Supervisor="@supervisor" Educations="@educations" ></ProjectCard>

                <ProjectCard Title="@title" Description="@description"
                        Date= "@date" Ects="@ects" Supervisor="@supervisor" CoSupervisor="@coSupervisor" Educations="@educations" ></ProjectCard>
            </div>
        </div>
    </div>
</div>