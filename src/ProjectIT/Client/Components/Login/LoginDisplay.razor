@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using ProjectIT.Client.Constants
@using ProjectIT.Client.Http
@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <div class="d-flex align-items-center">
            <div class="dimensions decoration-on-hover d-flex align-items-center">
                <a class="text-decoration-none fw-bold text-white px-3 py-4" @onclick="BeginLogOut"> Sign out </a>
            </div>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="d-flex align-items-center">
            <div class="dimensions decoration-on-hover d-flex align-items-center">
                <a class="text-decoration-none fw-bold text-white px-3 py-4" @onclick="BeginLogIn"> Sign in/up </a>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>