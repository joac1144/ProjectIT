@using ProjectIT.Client.Components.Tag
@using ProjectIT.Client.Components.Filter
@inject HttpClient httpClient

<div class="d-flex flex-column shadow px-4 py-4 bg-body rounded gap-4">
    <h6 class="fw-bold"> @Title </h6>
    <div class="d-flex flex-row px-3 gap-5">
        @foreach (var programme in Programmes)
        {
            <p class="fs-8"> <img class="h-50" src="images/graduation.png" alt=""> @programme </p>
        }
        <p class="fs-8"> <img src="images/tag.png" class="h-50" alt=""> @Ects </p>
        <p class="fs-8"> <img src="images/calender.png" class="h-50" alt=""> @Season @Year </p>
        <p class="fs-8"> <img src="images/groups.png" class="h-50" alt=""> @GroupMembers </p>
    </div>
    <hr>
    <p class="fs-7 fw-bold"> @Description </p>
</div>