<div class="card-zoom card-size mb-3">
    <a href="counter" class="link-dark text-decoration-none card-size d-block">
        <div class="shadow rounded bg-white rounded-1 px-4 py-4 mb-3 card-size overflow-hidden card-wrapper">
            <div class="fs-4 fw-bold truncate-text">@Title</div>
            <div class="d-flex justify-content-around padding-icons">
                <div class="d-flex">
                    <img src="images\educations.png" width="23rem" height="23rem">
                    <span class="mx-1"></span>
                    <div class="fs-7">
                        @for (int i = 0; i < Educations.Count(); i++)
                        {
                            if (i == Educations.Count() - 1)
                            {
                                @Educations.ElementAt(i).ToString()
                            }
                            else
                            {
                                @Educations.ElementAt(i).ToString()
                                <span class="border-start border-2 border-dark border-opacity-10 mx-2"></span>
                            }
                        }
                    </div>
                </div>

                <div class="d-flex">
                    <img src="images\hashtags.png" width="22rem" height="22rem">
                    <span class="mx-1"></span>
                    <div class="fs-7">
                        @Ects.ToString()
                    </div>
                </div>

                <div class="d-flex">
                    <img src="images\date.png" width="22rem" height="22rem">
                    <span class="mx-1"></span>
                    <div class="fs-7">
                        @Date.Season @Date.Year
                    </div>
                </div>

                <div class="d-flex">
                    <img src="images\supervisor.png" width="23rem" height="23rem">
                    <span class="mx-1"></span>
                    <div class="fs-7">
                        @Supervisor.FullName
                        @if (CoSupervisor != null)
                        {
                            <span class="border-start border-2 border-dark border-opacity-10 mx-2"></span>
                            <br>
                            @CoSupervisor.FullName
                        }
                    </div>
                </div>
            </div>
            <hr>
            @if (CoSupervisor != null)
            {
                <div class="truncate-text line-clamp-2">
                    @Description
                </div>
            }
            else {
                <div class="truncate-text line-clamp-3">
                    @Description
                </div>
            }
        </div>
    </a>
</div>