@using ProjectIT.Client.Components.Filter;
@using ProjectIT.Client.Components.Tag;

@if (Tags != null)
{
    @foreach (FilterTag filterTag in Tags)
    {
        @if (filterTag.Selected)
        {
            <span>
                <TagBox Tag="@filterTag" IsDisabled=@(!TagsAreClickable) OnClicked="() => TagClicked(filterTag)" />
            </span>
        }
    }
}