@using ProjectIT.Client.Components.Panel
@using ProjectIT.Shared.Enums;
@inject IStringLocalizer<EnumsResource> EnumsLocalizer

<Panel Title="@Title">
    @if (Data != null)
    {
        foreach (FilterTagSimple filterTag in Data)
        {
            <div class="form-check fw-normal">
                <input class="form-check-input rounded-0 shadow-none border border-black"
                       type="checkbox" 
                    id=@($"{filterTag.Tag}Checkbox") 
                    @onchange="(e) => CheckboxChecked(e, filterTag)" 
                    checked="@filterTag.Selected">
                <label class="form-check-label" for=@($"{filterTag.Tag}Checkbox")>
                    @filterTag.Tag
                </label>
            </div>
        }
    }
</Panel>